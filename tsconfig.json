{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "experimentalDecorators": true,
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  },
  "include": [
    "./src/**/*"
  ]
}